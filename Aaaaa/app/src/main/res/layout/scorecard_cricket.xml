<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jscore_cricket"
    android:orientation="vertical">



    <LinearLayout
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >

        <ImageView
            android:id="@+id/team1img_score"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/team1name_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@drawable/border_cricketscore"/>
        <TextView
            android:id="@+id/team2name_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@drawable/border_cricketscore"/>
        <ImageView
            android:id="@+id/team2img_score"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            />

    </LinearLayout>

    <!--<NestedScrollView android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:fillViewport="true">-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="05dp"
            android:paddingRight="05dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:weightSum="11"
                android:id="@+id/tabllayout"
                android:visibility="visible"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/Batteam_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:text="Batting "
                    android:textSize="20sp" />



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="R"
                    android:gravity="center"
                    android:id="@+id/SR"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="B"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="4s"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="6s"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="S/R"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_weight="1.5"
                    android:layout_marginRight="12dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.8">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_batting"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    >

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:weightSum="11"
                android:id="@+id/bowler"
                android:visibility="visible"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/bowlertext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:text="Bowling "
                    android:textSize="20sp" />



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="R"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="B"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="E"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="W"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="I"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_weight="1.5"
                    android:layout_marginRight="12dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_bowling"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"></android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>
    <!--</NestedScrollView>-->


</LinearLayout>